# Environment Configuration
NODE_ENV=production
PORT=3000

# Use Mock Data (set to true for Vercel deployment without database)
USE_MOCK_DATA=true

# Database Configuration (optional when using mock data)
# DATABASE_URL=your_database_url_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d

# Default Manager Account
DEFAULT_MANAGER_NAME=Purchasing Manager
DEFAULT_MANAGER_EMAIL=manager@sabbagh.com
DEFAULT_MANAGER_PASSWORD=Manager@123

# Logs Directory (not used in Vercel)
LOGS_DIR=./logs